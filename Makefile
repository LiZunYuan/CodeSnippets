XCODE_DIR=~/Library/Developer/Xcode/UserData/CodeSnippets


PROPA=9C79A834-2411-4227-B70F-63D2807D29B8.codesnippet
PROPC=34BC794F-28F4-48E9-A86D-44C3013DE167.codesnippet
PROPW=810AEB15-97CF-4207-8B2E-CC3FAFC60EFE.codesnippet
PROPS=718740CD-AF47-4C93-8B58-C9D8F58B1330.codesnippet
WS=042C6FCB-ABA2-4E9C-BB5A-AA75873428C6.codesnippet
INTERFACE=8D68DFE7-69E7-46E6-B4F0-F3C5EEC1BC12.codesnippet
SHARED_INSTANCE=45D5535E-44FA-491F-8E4B-3251A46D5372.codesnippet
PRAGMA=4153CD73-5499-4668-B452-128583FC6848.codesnippet
NOTIFICATION_ADD=91A506E0-6D5F-47CF-826B-D308C68D33A8.codesnippet
NOTIFICATION_REMOVE=17E52D66-5DEC-4AB6-A255-4352CFD38BE5.codesnippet
NOTIFICATION_POST=45E738C9-F126-4C72-93C4-911F094C63F9.codesnippet


install_snippets:
	mkdir -p $(XCODE_DIR)
	cp CodeSnippets/$(PROPA) $(XCODE_DIR)
	cp CodeSnippets/$(PROPC) $(XCODE_DIR)
	cp CodeSnippets/$(PROPW) $(XCODE_DIR)
	cp CodeSnippets/$(PROPS) $(XCODE_DIR)
	cp CodeSnippets/$(WS) $(XCODE_DIR)
	cp CodeSnippets/$(INTERFACE) $(XCODE_DIR)
	cp CodeSnippets/$(SHARED_INSTANCE) $(XCODE_DIR)
	cp CodeSnippets/$(PRAGMA) $(XCODE_DIR)
	cp CodeSnippets/$(NOTIFICATION_ADD) $(XCODE_DIR)
	cp CodeSnippets/$(NOTIFICATION_REMOVE) $(XCODE_DIR)
	cp CodeSnippets/$(NOTIFICATION_POST) $(XCODE_DIR)


uninstall_snippets:
	rm $(XCODE_DIR)/$(PROPA)
	rm $(XCODE_DIR)/$(PROPC)
	rm $(XCODE_DIR)/$(PROPW)
	rm $(XCODE_DIR)/$(PROPS)
	rm $(XCODE_DIR)/$(WS)
	rm $(XCODE_DIR)/$(INTERFACE)
	rm $(XCODE_DIR)/$(SHARED_INSTANCE)
	rm $(XCODE_DIR)/$(PRAGMA)
	rm $(XCODE_DIR)/$(NOTIFICATION_ADD)
	rm $(XCODE_DIR)/$(NOTIFICATION_REMOVE)
	rm $(XCODE_DIR)/$(NOTIFICATION_POST)
